    "@types/node-fetch": "2.5.4",
    "@types/node": "12.12.21",
    "@types/pg": "7.11.2",
    "c8": "7.0.0",
    "node-fetch": "2.6.0",
    "nodemon": "2.0.2",
    "pg-query-native": "1.2.0",
    "prettier": "1.19.1",
    "ts-node": "8.5.4",
    "typescript": "3.7.4"
  },
