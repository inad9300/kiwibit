    "@types/node-fetch": "2.5.6",
    "@types/node": "13.13.0",
    "@types/pg": "7.14.3",
    "c8": "7.1.0",
    "node-fetch": "2.6.0",
    "nodemon": "2.0.3",
    "prettier": "2.0.4",
    "ts-node": "8.8.2",
    "typescript": "3.8.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
